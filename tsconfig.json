{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "ui/*": [
        "src/ui/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "constants/*": [
        "src/constants/*"
      ]
    },
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "main.js"
  ]
}